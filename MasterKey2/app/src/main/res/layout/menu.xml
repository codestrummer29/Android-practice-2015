<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="16dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="#B2DFDB"
    android:id="@+id/cv1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/im1"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_action_new_account"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h1"
            android:layout_toRightOf="@+id/im1"
            android:textSize="30sp"
            android:text="Add Details"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sh1"
            android:layout_toRightOf="@+id/im1"
            android:layout_below="@+id/h1"
            android:text="Add new entries"
            android:textColor="#000"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#B2DFDB"
        android:id="@+id/cv2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/im2"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_action_edit"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/h2"
                android:layout_toRightOf="@+id/im2"
                android:textSize="30sp"
                android:text="Update"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sh2"
                android:layout_toRightOf="@+id/im2"
                android:layout_below="@+id/h2"
                android:text="Change existing details"
                android:textColor="#000"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#B2DFDB"
        android:id="@+id/cv3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/im3"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_action_view_as_list"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/h3"
                android:layout_toRightOf="@+id/im3"
                android:textSize="30sp"
                android:text="View"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sh3"
                android:layout_toRightOf="@+id/im3"
                android:layout_below="@+id/h3"
                android:text="View/Delete your details"
                android:textColor="#000"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#B2DFDB"
        android:id="@+id/cv4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/im4"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_action_dial_pad"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/h4"
                android:layout_toRightOf="@+id/im4"
                android:textSize="30sp"
                android:text="Password"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sh4"
                android:layout_toRightOf="@+id/im4"
                android:layout_below="@+id/h4"
                android:text="Change existing master key"
                android:textColor="#000"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>