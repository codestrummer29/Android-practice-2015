<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="#FFFFFF">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/mainrel">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relative2"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp">
                    <com.pkmmte.view.CircularImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:border="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/myfb_image"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_name"
                        android:text="Name"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:layout_toRightOf="@+id/myfb_image"
                        android:paddingLeft="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mylocation"
                        android:text="Title"
                        android:textSize="12dp"
                        android:textColor="#303F9F"
                        android:textStyle="bold"
                        android:layout_below="@+id/my_name"
                        android:layout_toRightOf="@+id/myfb_image"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 December"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/date2"
                        android:textColor="#9E9E9E"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:id="@+id/myimage"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_below="@+id/relative2"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="asdasd"
                    android:layout_alignParentBottom="true"
                    android:textSize="20dp"
                    android:id="@+id/postno"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete"
                    android:text="Delete"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:drawableLeft="@mipmap/ic_delete_white_24dp"
                    android:layout_below="@+id/myimage"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorAccent"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>

</LinearLayout>