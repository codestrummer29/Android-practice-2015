<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#FFFFFF"
    android:padding="5dp"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@mipmap/tandooriroti">

            </ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Tandoori Roti"/>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/paisa"
                    android:layout_width="wrap_content"
                    android:textSize="19dp"
                    android:layout_height="wrap_content"
                    android:text="Rs 20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Quantity"
                    android:textSize="19dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/quant"
                    android:layout_toRightOf="@+id/paisa"/>
                <TextView
                    android:id="@+id/value7"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="0"
                    android:textSize="22dp"
                    android:layout_toRightOf="@+id/remove7"/>
                <ImageView
                    android:id="@+id/remove7"
                    android:layout_toRightOf="@+id/quant"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_delete"/>
                <ImageView
                    android:layout_toRightOf="@+id/value7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add7"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@mipmap/chapatis">

            </ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Chapati"/>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/paisa2"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Rs 15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Quantity"
                    android:textSize="19dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/quant2"
                    android:layout_toRightOf="@+id/paisa2"/>
                <TextView
                    android:id="@+id/value8"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="0"
                    android:textSize="22dp"
                    android:layout_toRightOf="@+id/remove8"/>
                <ImageView
                    android:id="@+id/remove8"
                    android:layout_toRightOf="@+id/quant2"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_delete"/>
                <ImageView
                    android:layout_toRightOf="@+id/value8"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/add8"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@mipmap/butternaan">

            </ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Butter Naan"/>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/paisa3"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Rs 30"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Quantity"
                    android:textSize="19dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/quant3"
                    android:layout_toRightOf="@+id/paisa3"/>
                <TextView
                    android:id="@+id/value9"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="0"
                    android:textSize="22dp"
                    android:layout_toRightOf="@+id/remove9"/>
                <ImageView
                    android:id="@+id/remove9"
                    android:layout_toRightOf="@+id/quant3"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_delete"/>
                <ImageView
                    android:layout_toRightOf="@+id/value9"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/add9"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>