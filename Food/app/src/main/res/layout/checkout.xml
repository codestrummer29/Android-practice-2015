<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Order"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Data"
            android:padding="10dp"
            android:textStyle="italic"
            android:textSize="15dp"
            android:background="#FFFFFF"
            android:id="@+id/orderdata" />
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/orderdata"
            android:text="Total"/>
        <TextView
            android:layout_toRightOf="@+id/total"
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totvalue"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18dp"
            android:padding="5dp"
            android:layout_below="@+id/orderdata"
            android:text ="Value"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Price inclusive of all taxes"
            android:layout_below="@+id/totvalue"
            android:padding="10dp"
            android:textSize="10dp"
            android:layout_marginLeft="200dp"/>
      <Button
          android:layout_marginLeft="20dp"
          android:layout_width="wrap_content"
          android:layout_height="35dp"
          android:layout_marginTop="100dp"
          android:padding="10dp"
          android:textSize="11dp"
          android:text="Cancel Order"
          android:background="#FFFFFF"
          android:id="@+id/deleteorder"
          android:layout_below="@+id/total" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Edit order"
            android:id="@+id/editorder"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:textSize="11dp"
            android:background="#FFFFFF"
            android:layout_toRightOf="@+id/deleteorder"
            android:layout_below="@+id/total"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="10dp"
            android:id="@+id/confirm"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:textSize="11dp"
            android:background="#FFFFFF"
            android:text="Confirm"
            android:layout_toRightOf="@+id/editorder"
            android:layout_below="@+id/total"/>



    </RelativeLayout>
</LinearLayout>