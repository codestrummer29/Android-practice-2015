<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#FFFFFF"
    android:padding="5dp"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
       <ImageView
           android:layout_width="fill_parent"
           android:layout_height="220dp"
           android:scaleType="fitXY"
           android:src="@mipmap/vegkabab">

       </ImageView>

       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:textStyle="bold"
           android:text="Veg Kabab"/>

       <RelativeLayout
           android:padding="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <TextView
               android:id="@+id/paisa"
               android:layout_width="wrap_content"
               android:textSize="19dp"
               android:layout_height="wrap_content"
               android:text="Rs 70"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="38dp"
               android:text="Quantity"
               android:textSize="19dp"
               android:textStyle="italic"
               android:layout_marginLeft="100dp"
               android:id="@+id/quant"
               android:layout_toRightOf="@+id/paisa"/>
          <TextView
              android:id="@+id/value1"
              android:layout_width="wrap_content"
              android:layout_height="38dp"
              android:text="0"
              android:textSize="22dp"
              android:layout_toRightOf="@+id/remove1"/>
           <ImageView
               android:id="@+id/remove1"
               android:layout_toRightOf="@+id/quant"
               android:layout_width="wrap_content"
               android:layout_marginLeft="25dp"
               android:layout_height="wrap_content"
               android:src="@android:drawable/ic_delete"/>
           <ImageView
               android:layout_toRightOf="@+id/value1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/add1"
               android:src="@android:drawable/ic_input_add"/>
       </RelativeLayout>

       </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:src="@mipmap/maxresdefault">

        </ImageView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Chicken Tikka"/>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/paisa2"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Rs 110"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Quantity"
                android:textSize="19dp"
                android:textStyle="italic"
                android:layout_marginLeft="100dp"
                android:id="@+id/quant2"
                android:layout_toRightOf="@+id/paisa2"/>
            <TextView
                android:id="@+id/value2"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="0"
                android:textSize="22dp"
                android:layout_toRightOf="@+id/remove2"/>
            <ImageView
                android:id="@+id/remove2"
                android:layout_toRightOf="@+id/quant2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_delete"/>
            <ImageView
                android:layout_toRightOf="@+id/value2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/add2"
                android:src="@android:drawable/ic_input_add"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@mipmap/chickenkathiroll2">

        </ImageView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Kathi Roll"/>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/paisa3"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Rs 100"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Quantity"
                android:textSize="19dp"
                android:textStyle="italic"
                android:layout_marginLeft="100dp"
                android:id="@+id/quant3"
                android:layout_toRightOf="@+id/paisa3"/>
            <TextView
                android:id="@+id/value3"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="0"
                android:textSize="22dp"
                android:layout_toRightOf="@+id/remove3"/>
            <ImageView
                android:id="@+id/remove3"
                android:layout_toRightOf="@+id/quant3"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_delete"/>
            <ImageView
                android:layout_toRightOf="@+id/value3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/add3"
                android:src="@android:drawable/ic_input_add"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
</ScrollView>